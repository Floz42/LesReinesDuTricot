{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
    <div class="container col-md-10 col-xs-12">
        <h1 class="my-3 text-center">Votre panier :</h1>
        {% if items | length > 0 %}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.title }}</td>
                            <td>{{ item.product.price }} €</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.product.price * item.quantity}} €</td>
                            <td>
                                <a href="{{ path('cart_remove', {'id': item.product.id })}}" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Total :</td>
                        <td>{{ total }} €</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        {% else %}
            <div class="alert alert-warning col-8 text-center mx-auto">
                Votre panier est vide
            </div>            
        {% endif %}
    <a href="{{ path('home')}}">
        <i class="fas fa-arrow-left"></i>
        Retour à la liste des produits
    </a>
    </div>
{% endblock %}
