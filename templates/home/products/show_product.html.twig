{% extends 'base.html.twig' %}

{% block title %}haha{% endblock %}

{% block body %}
    <div class="container container_top">
        <div class="row col-8 m-auto">
            <div class="col-md-6 col-xs-12">
                <img src="{{product.picture}}" alt="{{ product.title }}">
                <table class="table table-stripped">
                    <tr>
                        <th>Prix</th>
                        <td><strong>{{ product.price }} €</strong></td>
                    </tr>
                    <tr>
                        <th>Disponibles</th>
                        <td><strong>{{ product.quantity }}</strong></td>
                    </tr>
                    <tr>
                        <th>Catégorie</th>
                        <td><strong><span class="badge badge-primary">{{ product.category.name }}</span></strong></td>
                    </tr>

                </table>
                <a href="{{ path('home')}}" class="btn btn-primary">
                    <i class="fas fa-arrow-left mr-1"></i>
                    Retour
                </a> 
            </div>
            <div class="col-md-6">
                <h2 class="text-center mb-3">{{ product.title }}</h2> 
                Description : 
                <div>{{ product.description }}</div>
            </div>
        </div>
    </div>
{% endblock %}