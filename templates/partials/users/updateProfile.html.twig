{% extends "base.html.twig" %}

{% block title %}Modifier vos informations personnelles{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row col-8 mx-auto mb-5" id="form_subscribe">
            <div class="col-12">
                <h1 class="font_title text-center">Modifier vos informations personnelles</h1>
                <p class="mb-5 text-center"><i>* champs obligatoires</i></p>
            </div>
            <div class="col-md-6 col-xs-12 mx-auto">
                <div class="col-md-12 col-xs-12 mx-auto">
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.phoneNumber) }}
                    {{ form_row(form.address) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.postalCode) }}
                </div>
            </div>
            <div class="col-md-6 col-xs-12 mx-auto">
                <div class="col-md-12 col-xs-12 mx-auto">
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.imageProfile) }}
                    {{ form_row(form.receiveNewsLetter) }}
                        <button class="btn btn-outline-success">
                            <i class="fas fa-check mr-1"></i>
                            Valider ces informations
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}