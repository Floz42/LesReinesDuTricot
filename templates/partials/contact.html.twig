<div class="container my-5">
    <div class="row">
        <div class="col-md-4 col-xs-12 mx-auto">
            <h2 class="text-center">
                Nous contacter :
            </h2>
            {{ form_start(form_contact) }}
            {{ form_widget(form_contact)}}
            <button class="btn btn-success">Envoyer</button>
            {{ form_end(form_contact)}}
        </div>
        <div class="col-md-6">
            <h2 class="text-center mb-5">Foire aux questions : </h2>
            {% for question in faq %}
                <div class="question_faq row border border-primary p-3 align-items-center">
                    <div class="col-10">
                        <h5>{{ question.question }}</h5>
                    </div>
                    <div class="col text-right">
                        <i class="arrow_question fas fa-arrow-down"></i>
                    </div>
                </div>
                <div class="answer_faq row border border-secondary justify-content-between p-3 align-items-center">
                    {{ question.answer }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>