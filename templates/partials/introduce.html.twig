            <div id="carouselExampleControls" class="carousel slide mx-auto" data-ride="carousel">
                <div class="carousel-inner">
                    {% for product in lastProducts %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img class="carousel_img d-block w-100 rounded" src="{{ product.picture }}" alt="{{ product.title }}">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ product.title }}</h5>
                                <p class="text-left">{{ product.description | slice(0, 90) }}...</p>
                                <p>
                                    <a href="{{ path('show_product', {id: product.id})}}" class="btn btn-primary">
                                        <i class="fas fa-plus mr-1"></i>
                                        En savoir plus
                                    </a>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
