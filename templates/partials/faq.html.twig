
<div class="container-fluid" id="faq">
    <h2 class="my-5 text-center font_title">Foire aux questions : </h2>
    {% for question in faq %}
        <div class="question_faq row border border-primary justify-content-between p-3 align-items-center">
            <h5>{{ question.question }}</h5>
            <i class="fas fa-arrow-down"></i>
        </div>
        <div class="answer_faq row border border-secondary justify-content-between p-3 align-items-center">
            {{ question.answer }}
        </div>
    {% endfor %}
</div>
